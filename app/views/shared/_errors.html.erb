<% if obj.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8'>
      <p><strong>Please fix the following <%= 'error'.pluralize(obj.errors.count) %>:</strong></p>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>